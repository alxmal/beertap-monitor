@require './utils/_*.styl'

/* Custom */
:root
	--color-white #FFFFFF
	--color-black #041128
	--color-gray-n10 #EBECF0
	--color-gray-n20 #DFE1E6
	--color-gray-n30 #B3BAC5
	--color-gray-n400 #505F79
	--color-gray-n500 #42526E
	--color-gray-n700 #253858

/* App */
.container
	display grid
	grid-template-columns repeat(5, 1fr)
	grid-template-rows 48px repeat(4, 1fr)
	grid-column-gap 1em
	grid-row-gap 1em
	// width 100vw
	height 100vh
	padding 1em 2em
	background-color var(--color-black)

.tap-setup-btn
	display flex
	justify-content center
	align-items center
	width 50px
	height 100%
	grid-column-start 5
	grid-column-end 6
	grid-row-start 1
	grid-row-end 2
	justify-self end
	border none
	border-radius 4px
	font-size 1.5em
	// cursor pointer
	outline none
	color white
	&:hover
		background-color rgba(#FFF, .2)
		.tap-icon
			fill var(--color-gray-n30)
	.tap-icon
		fill var(--color-gray-n400)

.brand
	display flex
	grid-column-start 1
	grid-column-end 5
	grid-row-start 1
	grid-row-end 2
	align-items center
	text-align left
	vertical-align center
	font-size 2em
	color var(--color-gray-n400)
	font-family 'Helvetica', 'Arial', sans-serif
