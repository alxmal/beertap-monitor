.beer-card
	display flex
	flex-flow column nowrap
	justify-content space-start
	align-items flex-start
	align-content space-between
	padding 1em
	// border 1px solid var(--color-gray-n10)
	border-radius .25em
	background-color var(--color-gray-n700)
	&:hover
		background-color var(--color-gray-n500)

	.prod 
		display flex
		flex-flow column nowrap
		color var(--color-white)

		.brewery
			font-family 'Helvetica', 'Arial', sans-serif
			font-size 1em
	
		.name
			font-family 'Garamond', 'Times', serif
			font-size 1.75em
			font-weight bold
			font-variant-numeric tabular-nums
			letter-spacing 1px
			margin .25em 0 
		
	.sort
		display block
		padding 4px 8px 3px 8px
		border-radius 2px
		background-color var(--color-gray-n20)
		font-family 'Arial', 'Helvetica', sans-serif
		font-size .65em
		text-transform uppercase
		font-weight 600
		letter-spacing .1em
		color var(--color-black)

	.stats
		width 100%
		display flex
		flex-flow row nowrap
		justify-content space-between
		margin-top auto
		font-family 'Arial', 'Helvetica', sans-serif
		font-size 1.75em
		color var(--color-white)

		.abv
			margin-right .5em

