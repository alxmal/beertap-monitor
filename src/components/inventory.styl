form-block = 
	display flex
	flex-flow row nowrap
	justify-content flex-start
	margin-top 12px

input-flex-block = 
	display flex
	flex-flow column nowrap
	flex 1
	margin-right 8px

.inventory
	display flex
	flex-flow column nowrap
	background-color var(--color-white)
	padding 24px
	font-family 'Helvetica', 'Arial', sans-serif
	border 10px solid var(--color-black)
	header
		display flex
		flex-flow row nowrap
		justify-content space-between
		.close-icon
			width 32px
			height 32px
			border-radius 4px
			background-image url(./../assets/icons/close.svg)
			&:hover
				background-color var(--color-gray-n10)
			// cursor pointer
	h2
		margin-bottom 16px
	footer 
		display flex
		justify-content flex-end
		background-color var(--color-white)
		button
			padding 8px 16px
			margin-top 32px
			margin-right 20px
			border 2px solid var(--color-gray-n400)
			border-radius 4px
			font-size 1em
			// cursor pointer
			outline none
			&:hover 
				background-color var(--color-black)
				color var(--color-white)
	.beer-form
		display flex
		flex-flow column nowrap
		margin 16px 16px 24px 16px
		p
			font-size .75em
		
		.product
			{form-block}
			.brewery
				{input-flex-block}
			.name
				{input-flex-block}
		
		.price-tag
			{form-block}
			.style
				{input-flex-block}
			.price
				{input-flex-block}	

		.stats
			{form-block}
			.og
				{input-flex-block}
			.abv
				{input-flex-block}
			.ibu
				{input-flex-block}

		h3
			margin-bottom 4px
			color #8777D9
		input
			width 100%
			margin-top 4px
			padding 8px
			border none
			border-radius 2px
			background-color var(--color-gray-n10)
			&::placeholder
				color var(--color-gray-n30)