.beer-card
	display flex
	flex-flow row nowrap
	justify-content flex-start
	align-items center
	padding 2px 16px
	border-radius .25em
	background-color var(--color-gray-n700)
	&:hover
		background-color var(--color-gray-n500)
	
	.tap-number
		flex-basis 8%
		margin-right 20px
		color #8777D9
		font-family 'Helvetica', 'Arial', sans-serif
		font-size 3em
		font-weight bold
		text-align center
		opacity .6

	.card__prod 
		display flex
		flex-flow column nowrap
		color var(--color-white)
		flex 2

		.prod__brewery
			display flex
			align-items center
			font-family 'Helvetica', 'Arial', sans-serif
			font-size 1.2em
	
		.prod__name
			font-family 'Georgia', 'Times', serif
			font-size 1.75em
			font-weight bold
			letter-spacing 1px
			margin-top 8px 
		
		.card__style
			padding 4px 8px 3px 8px
			margin-left 16px
			border-radius 2px
			// background-color var(--color-gray-n20)
			border 2px solid
			font-family 'Arial', 'Helvetica', sans-serif
			font-size 12px
			text-transform uppercase
			font-weight 600
			letter-spacing .1em
			color var(--color-black)

	.card__stats
		display flex
		flex-flow row nowrap
		justify-content flex-start
		flex 1
		font-family 'Arial', 'Helvetica', sans-serif
		font-size 2em
		color var(--color-white)

		&.shifted
			.legend-wrapper
				display flex
				flex-flow column nowrap
			.legend
				margin-left 16px
				margin-bottom 4px
				min-width 80px
				text-align left
				font-size 14px
				opacity .5

		.stats__og, 
		.stats__abv, 
		.stats__ibu
			margin-left 16px
			min-width 80px
			text-align left
		.stats__price
			margin-left 8px
			margin-right 16px
			min-width 80px
			text-align center

